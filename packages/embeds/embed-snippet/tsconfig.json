{
  "extends": "@calcom/tsconfig/base.json",
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2015",
    "baseUrl": ".",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "outDir": "dist",
    "paths": {
      "@calcom/embed-core": ["../embed-core/src"],
      "@calcom/embed-react": ["../embed-react/src"]
    }
  },
  "include": ["."],
  "exclude": ["dist", "build", "**/node_modules/**"]
}
